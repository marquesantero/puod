      "studio-route": {
        "ClusterId": "studio-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/studio/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/studio/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://user-service:8080"
          }
        }
      },
      "integration-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://integration-service:8080"
          }
        }
      },
      "studio-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://studio-service:8080"
          }
        }
      }
    }
  }
}
