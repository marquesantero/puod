{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-key-that-is-at-least-32-bytes-long-for-hs256",
    "Issuer": "https://puod.local",
    "Audience": "puod-api"
  },
  "ReverseProxy": {
    "Routes": {
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "setup-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/setup/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/setup/{**catch-all}" }
        ]
      },
      "bootstrap-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/bootstrap/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/bootstrap/{**catch-all}" }
        ]
      },
      "integration-route": {
        "ClusterId": "integration-cluster",
        "Match": {
          "Path": "/api/integration/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/integration/{**catch-all}" }
        ]
      },
      "clients-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/clients/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/clients/{**catch-all}" }
        ]
      },
      "companies-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/companies/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/companies/{**catch-all}" }
        ]
      },
      "users-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "roles-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/roles/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/roles/{**catch-all}" }
        ]
      },
      "groups-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/groups/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/groups/{**catch-all}" }
        ]
      },
      "profiles-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/profiles/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/profiles/{**catch-all}" }
        ]
      },
      "auth-profiles-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/auth-profiles/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth-profiles/{**catch-all}" }
        ]
      },
      "permissions-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "jwt",
        "Match": {
          "Path": "/api/permissions/{**catch-all}"
