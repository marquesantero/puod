# ============================================
# PUOD - Environment Variables
# Copy this file to .env and adjust values
# ============================================

# PostgreSQL
PUOD_POSTGRES_HOST=puod-postgres
PUOD_POSTGRES_DB=puod
PUOD_POSTGRES_USER=puod_user
PUOD_POSTGRES_PASSWORD=puodPasswd@25

# Redis
PUOD_REDIS_HOST=puod-redis
PUOD_REDIS_PASSWORD=puod_redis_pass

# RabbitMQ
PUOD_RABBITMQ_HOST=puod-rabbitmq
PUOD_RABBITMQ_USER=puod_user
PUOD_RABBITMQ_PASSWORD=puod_rabbit_pass

# JWT (IMPORTANT: change in production - min 43 chars for HMAC-SHA256)
PUOD_JWT_SECRET=your-256-bit-secret-key-change-in-production-min-32-chars
PUOD_JWT_ISSUER=https://puod.local
PUOD_JWT_AUDIENCE=puod-api
